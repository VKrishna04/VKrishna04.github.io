{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://vkrishna04.github.io/settings.schema.json",
	"title": "Portfolio Settings Configuration",
	"description": "Configuration schema for Krishna GSVV's portfolio website",
	"type": "object",
	"properties": {
		"github": {
			"type": "object",
			"description": "GitHub API configuration for fetching repositories",
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"org",
						"user"
					],
					"description": "Type of GitHub account - 'org' for organization, 'user' for individual user"
				},
				"username": {
					"type": "string",
					"description": "GitHub organization or username"
				},
				"apiUrl": {
					"type": "string",
					"format": "uri",
					"description": "GitHub API endpoint for repositories"
				},
				"userAgent": {
					"type": "string",
					"description": "Custom user agent for API requests"
				}
			},
			"required": [
				"type",
				"username",
				"apiUrl",
				"userAgent"
			]
		},
		"projects": {
			"type": "object",
			"description": "Project display configuration",
			"properties": {
				"ignore": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Array of repository names to exclude from display"
				},
				"maxProjects": {
					"type": "integer",
					"minimum": 1,
					"maximum": 50,
					"description": "Maximum number of projects to display"
				},
				"sortBy": {
					"type": "string",
					"enum": [
						"updated",
						"created",
						"stars",
						"name"
					],
					"description": "Sort criteria for repositories"
				},
				"sortOrder": {
					"type": "string",
					"enum": [
						"asc",
						"desc"
					],
					"description": "Sort order - ascending or descending"
				},
				"showForks": {
					"type": "boolean",
					"description": "Whether to show forked repositories"
				},
				"showPrivate": {
					"type": "boolean",
					"description": "Whether to show private repositories"
				},
				"fallbackMode": {
					"type": "boolean",
					"description": "Enable fallback projects if API fails"
				}
			},
			"required": [
				"ignore",
				"maxProjects",
				"sortBy",
				"sortOrder",
				"showForks",
				"showPrivate",
				"fallbackMode"
			]
		},
		"display": {
			"type": "object",
			"description": "Basic display information",
			"properties": {
				"officialName": {
					"type": "string",
					"description": "Full official name displayed across the site"
				},
				"devUsername": {
					"type": "string",
					"description": "Developer username/handle"
				},
				"profileImage": {
					"type": "string",
					"format": "uri",
					"description": "URL to profile image"
				}
			},
			"required": [
				"officialName",
				"devUsername",
				"profileImage"
			]
		},
		"home": {
			"type": "object",
			"description": "Home page configuration",
			"properties": {
				"greeting": {
					"type": "string",
					"description": "Greeting text displayed before name"
				},
				"name": {
					"type": "string",
					"description": "Name displayed prominently on home page"
				},
				"nameGradient": {
					"type": "string",
					"description": "CSS gradient for name text"
				},
				"typewriterStrings": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Array of strings for typewriter effect"
				},
				"description": {
					"type": "string",
					"description": "Short description about yourself"
				},
				"location": {
					"type": "object",
					"properties": {
						"show": {
							"type": "boolean",
							"description": "Whether to show location on home page"
						},
						"text": {
							"type": "string",
							"description": "Custom location text with emoji"
						},
						"icon": {
							"type": "string",
							"description": "Location icon/emoji"
						},
						"city": {
							"type": "string",
							"description": "City name"
						},
						"country": {
							"type": "string",
							"description": "Country name"
						}
					}
				},
				"profileImage": {
					"type": "object",
					"properties": {
						"type": {
							"type": "string",
							"enum": [
								"github",
								"display",
								"custom"
							],
							"description": "Source of profile image"
						},
						"customUrl": {
							"type": "string",
							"description": "Custom image URL (when type is 'custom'). Leave empty if not using custom image."
						},
						"altText": {
							"type": "string",
							"description": "Alt text for profile image"
						},
						"borderColor": {
							"type": "string",
							"description": "Tailwind CSS border color class"
						},
						"shadowColor": {
							"type": "string",
							"description": "Tailwind CSS shadow color class"
						}
					}
				},
				"buttons": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"text": {
								"type": "string",
								"description": "Button text"
							},
							"link": {
								"type": "string",
								"description": "Button link (internal route or external URL)"
							},
							"type": {
								"type": "string",
								"enum": [
									"primary",
									"outline"
								],
								"description": "Button style type"
							},
							"gradient": {
								"type": "string",
								"description": "Tailwind gradient classes (for primary buttons)"
							},
							"hoverGradient": {
								"type": "string",
								"description": "Tailwind hover gradient classes"
							},
							"shadowColor": {
								"type": "string",
								"description": "Tailwind shadow color class"
							},
							"borderColor": {
								"type": "string",
								"description": "Tailwind border color class (for outline buttons)"
							},
							"textColor": {
								"type": "string",
								"description": "Tailwind text color class"
							},
							"hoverBg": {
								"type": "string",
								"description": "Tailwind hover background class"
							},
							"hoverText": {
								"type": "string",
								"description": "Tailwind hover text color class"
							},
							"icon": {
								"type": "string",
								"enum": [
									"ArrowDownIcon",
									"DocumentArrowDownIcon"
								],
								"description": "Heroicon name for button icon"
							}
						},
						"required": [
							"text",
							"link",
							"type"
						]
					}
				},
				"showScrollIndicator": {
					"type": "boolean",
					"description": "Whether to show scroll indicator at bottom"
				},
				"animations": {
					"type": "object",
					"properties": {
						"typewriterSettings": {
							"type": "object",
							"properties": {
								"deleteSpeed": {
									"type": "integer",
									"minimum": 1,
									"maximum": 200,
									"description": "Speed of text deletion (ms)"
								},
								"delay": {
									"type": "integer",
									"minimum": 1,
									"maximum": 500,
									"description": "Delay between characters (ms)"
								},
								"autoStart": {
									"type": "boolean",
									"description": "Whether to auto-start typewriter"
								},
								"loop": {
									"type": "boolean",
									"description": "Whether to loop typewriter animation"
								}
							}
						},
						"fadeInDuration": {
							"type": "number",
							"minimum": 0.1,
							"maximum": 3.0,
							"description": "Duration of fade-in animation (seconds)"
						},
						"staggerDelay": {
							"type": "number",
							"minimum": 0.01,
							"maximum": 1.0,
							"description": "Delay between staggered animations (seconds)"
						}
					}
				}
			}
		},
		"social": {
			"type": "object",
			"description": "Social media configuration",
			"properties": {
				"platforms": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string",
								"description": "Platform display name"
							},
							"key": {
								"type": "string",
								"description": "Unique identifier for platform"
							},
							"icon": {
								"type": "string",
								"enum": [
									"FaGithub",
									"FaLinkedin",
									"FaTwitter",
									"FaInstagram",
									"FaDiscord",
									"FaYoutube",
									"FaTwitch",
									"FaTiktok",
									"FaMedium",
									"FaDev",
									"FaStackOverflow",
									"FaDribbble",
									"FaBehance",
									"FaCodepen"
								],
								"description": "React icon component name"
							},
							"url": {
								"type": "string",
								"description": "Platform URL. Leave empty to disable this platform."
							},
							"label": {
								"type": "string",
								"description": "Accessibility label"
							},
							"color": {
								"type": "string",
								"description": "Tailwind text color class"
							},
							"hoverColor": {
								"type": "string",
								"description": "Tailwind hover text color class"
							},
							"showInHome": {
								"type": "boolean",
								"description": "Show on home page"
							},
							"showInFooter": {
								"type": "boolean",
								"description": "Show in footer"
							},
							"showInContact": {
								"type": "boolean",
								"description": "Show on contact page"
							},
							"enabled": {
								"type": "boolean",
								"description": "Whether platform is enabled"
							}
						},
						"required": [
							"name",
							"key",
							"icon",
							"url",
							"label",
							"color",
							"hoverColor",
							"showInHome",
							"showInFooter",
							"showInContact",
							"enabled"
						]
					}
				},
				"contact": {
					"type": "object",
					"properties": {
						"email": {
							"type": "string",
							"format": "email",
							"description": "Contact email address"
						},
						"phone": {
							"type": "string",
							"description": "Contact phone number"
						},
						"location": {
							"type": "string",
							"description": "Contact location"
						}
					}
				}
			}
		},
		"about": {
			"type": "object",
			"description": "About page configuration",
			"properties": {
				"heading": {
					"type": "string",
					"description": "Main heading for about page"
				},
				"subheading": {
					"type": "string",
					"description": "Subheading for about page"
				},
				"title": {
					"type": "string",
					"description": "Title section content"
				},
				"paragraphs": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Array of paragraphs for about section"
				},
				"image": {
					"type": "object",
					"properties": {
						"type": {
							"type": "string",
							"enum": [
								"github",
								"home",
								"custom"
							],
							"description": "Source of about page image"
						},
						"customUrl": {
							"type": "string",
							"description": "Custom image URL. Leave empty if not using custom image."
						},
						"altText": {
							"type": "string",
							"description": "Alt text for about image"
						}
					}
				},
				"skillsHeading": {
					"type": "string",
					"description": "Heading for skills section"
				},
				"skills": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"category": {
								"type": "string",
								"description": "Skill category name"
							},
							"icon": {
								"type": "string",
								"enum": [
									"DevicePhoneMobileIcon",
									"ServerIcon",
									"CpuChipIcon",
									"CodeBracketIcon"
								],
								"description": "Heroicon for category"
							},
							"items": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"name": {
											"type": "string",
											"description": "Skill name"
										},
										"icon": {
											"type": "string",
											"description": "React icon component name"
										},
										"color": {
											"type": "string",
											"description": "Tailwind text color class"
										}
									},
									"required": [
										"name",
										"icon",
										"color"
									]
								}
							}
						},
						"required": [
							"category",
							"icon",
							"items"
						]
					}
				},
				"stats": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"number": {
								"type": "string",
								"description": "Statistic number (e.g., '3+', '50+')"
							},
							"label": {
								"type": "string",
								"description": "Statistic label"
							}
						},
						"required": [
							"number",
							"label"
						]
					}
				}
			}
		},
		"resume": {
			"type": "object",
			"description": "Resume configuration",
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"file",
						"external"
					],
					"description": "Resume serving method"
				},
				"url": {
					"type": "string",
					"description": "Local file path (for type 'file')"
				},
				"filename": {
					"type": "string",
					"description": "Download filename"
				},
				"alternativeUrl": {
					"type": "string",
					"description": "External URL (for type 'external'). Leave empty if using local file."
				},
				"sectionOrder": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": [
							"experiences",
							"skills",
							"education",
							"awards",
							"certifications",
							"personalProjects",
							"publications",
							"languages",
							"volunteerExperience"
						]
					},
					"description": "Order of resume sections"
				}
			}
		},
		"navbar": {
			"type": "object",
			"description": "Navigation bar configuration",
			"properties": {
				"logo": {
					"type": "object",
					"properties": {
						"type": {
							"type": "string",
							"enum": [
								"text",
								"image",
								"github"
							],
							"description": "Logo type"
						},
						"text": {
							"type": "string",
							"description": "Logo text (for type 'text')"
						},
						"name": {
							"type": "string",
							"description": "Full name to display with logo"
						},
						"showName": {
							"type": "boolean",
							"description": "Whether to show name with logo"
						},
						"showNameOnMobile": {
							"type": "boolean",
							"description": "Whether to show name on mobile"
						},
						"gradient": {
							"type": "string",
							"description": "Tailwind gradient classes for logo"
						},
						"customImageUrl": {
							"type": "string",
							"description": "Custom image URL (for type 'image'). Leave empty if not using custom image."
						}
					}
				},
				"navigation": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string",
								"description": "Navigation item name"
							},
							"path": {
								"type": "string",
								"description": "Navigation item path"
							}
						},
						"required": [
							"name",
							"path"
						]
					}
				}
			}
		},
		"footer": {
			"type": "object",
			"description": "Footer configuration",
			"properties": {
				"copyright": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"description": "Copyright holder name"
						},
						"showYear": {
							"type": "boolean",
							"description": "Whether to show current year"
						},
						"text": {
							"type": "string",
							"description": "Copyright text"
						},
						"customText": {
							"type": "string",
							"description": "Custom copyright text (overrides default)"
						}
					}
				},
				"madeWith": {
					"type": "object",
					"properties": {
						"show": {
							"type": "boolean",
							"description": "Whether to show 'made with' section"
						},
						"text": {
							"type": "string",
							"description": "'Made with' text"
						},
						"icon": {
							"type": "string",
							"description": "React icon for 'made with'"
						},
						"iconColor": {
							"type": "string",
							"description": "Tailwind color class for icon"
						},
						"by": {
							"type": "string",
							"description": "Creator attribution"
						}
					}
				}
			}
		},
		"favicon": {
			"type": "object",
			"description": "Favicon configuration",
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"github",
						"custom",
						"default"
					],
					"description": "Favicon source type"
				},
				"customUrl": {
					"type": "string",
					"description": "Custom favicon URL. Leave empty if not using custom favicon."
				},
				"sizes": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Favicon sizes"
				},
				"appleTouchIcon": {
					"type": "boolean",
					"description": "Whether to generate Apple touch icon"
				}
			}
		},
		"counterAPI": {
			"type": "object",
			"description": "Project counter API configuration",
			"properties": {
				"enabled": {
					"type": "boolean",
					"description": "Whether to enable view counter"
				},
				"baseUrl": {
					"type": "string",
					"format": "uri",
					"description": "Counter API base URL"
				},
				"timeout": {
					"type": "integer",
					"minimum": 1000,
					"maximum": 30000,
					"description": "API timeout in milliseconds"
				},
				"fallbackOnError": {
					"type": "boolean",
					"description": "Whether to continue if API fails"
				}
			}
		}
	},
	"required": [
		"github",
		"projects",
		"display",
		"social"
	]
}